	.grey-btn {
    	font: 1.3em "Courier New", Courier, monospace;
		color: #BE2525 !important;
		text-align: center;
		text-transform: uppercase;
		text-decoration: none;
		cursor: pointer;
		width: 100%;
		float: left;
		display: block;
		
		padding: 8px 0 5px;
		margin: 0;
		
		background: #f6f6f6;
		border: 1px solid #c5c5c5;
		
		-webkit-border-radius: 5px;
		   -moz-border-radius: 5px;
		     -o-border-radius: 5px;
		        border-radius: 5px;
		
		-webkit-box-shadow: 0px 0px 1px #b4b4b4;
		   -moz-box-shadow: 0px 0px 1px #b4b4b4;
		     -o-box-shadow: 0px 0px 1px #b4b4b4;
			    box-shadow: 0px 0px 1px #b4b4b4;
	}
	
	.grey-btn:hover {
		background: #fff;
	}
	
	.grey-btn span {
    	text-align: center;
		background: none;
    	display: inline;
    	float: none;
    	padding: inherit;
    	width: auto;
	}
	
	
